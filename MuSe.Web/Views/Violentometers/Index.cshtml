@model IEnumerable<MuSe.Web.Data.Entities.Violentometer>

@{
    ViewData["Title"] = "Violentómetro";
}
@*
<link rel="stylesheet" href="~/css/violentometer.css" />*@

<h1 style="text-align:center;">Violentómetro</h1>

<p>
    @if (this.User.IsInRole("Admin"))
    {
        <a asp-action="Create"><img src="~/images/agregar.png" height="40" width="50" /></a>
    }
</p>
<div class="row d-flex justify-content-center">
<table style="text-align: center;"> 
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reliability.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if(item.Reliability.Description == "Leve")
            {
                <tr style="background-color: yellow;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reliability.Description)
                    </td>
                    <td>
                        @if (this.User.IsInRole("Admin"))
                        {
                                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/editar.png" height="40" width="50" /></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/eliminar.png" height="40" width="50" /></a>
                        }
                    </td>
                </tr>
            }

            @if (item.Reliability.Description == "Intermedia")
            {
                <tr style="background-color: orange;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reliability.Description)
                    </td>
                    <td>
                        @if (this.User.IsInRole("Admin"))
                        {
                                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/editar.png" height="40" width="50" /></a>
                                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/eliminar.png" height="40" width="50" /></a>
                        }
                    </td>
                </tr>
            }
            @if (item.Reliability.Description == "Grave")
            {
                <tr style="background-color: red;">
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reliability.Description)
                    </td>
                    <td>
                        @if (this.User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/editar.png" height="40" width="50" /></a>
                            <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/eliminar.png" height="40" width="50" /></a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>
