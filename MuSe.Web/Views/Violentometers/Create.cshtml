@model MuSe.Web.Models.ViolentometerViewModel

@{
    ViewData["Title"] = "Crear acción violenta";
}

<h1>Crear</h1>

<h4>Acción violenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" size="16" class="form-control" type="text" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReliabilityId" class="control-label"></label>
                <select asp-for="ReliabilityId" asp-items="Model.Reliabilities" class="form-control"></select>
                <span asp-validation-for="Reliability" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
</div>
