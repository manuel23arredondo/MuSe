@model MuSe.Web.Data.Entities.Incident

@{
    ViewData["Title"] = "Eliminar incidente";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de eliminar este incidente?</h3>
<div>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Violentometer.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Violentometer.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AgressorDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AgressorDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IncidentDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncidentDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IncidentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IncidentDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
    </form>
</div>
