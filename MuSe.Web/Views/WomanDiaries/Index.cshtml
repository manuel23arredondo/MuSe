@model IEnumerable<MuSe.Web.Data.Entities.WomanDiary>

@{
    ViewData["Title"] = "Diario";
}

<head>
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>
</head>
<h1>Diario</h1>
<p>
    <a asp-action="Create"><img src="~/images/agregar.png" height="40" width="50" /></a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mood.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mood.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/editar.png" height="40" width="50" /></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/eliminar.png" height="40" width="50" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>