@model MuSe.Web.Models.WomanDiaryViewModel

@{
    ViewData["Title"] = "Agregar incidente violento";
}

<h1>Agregar</h1>

<h4>Incidente violento</h4>
<hr />
<div class="row">
    <div class="form-group">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <label asp-for="MoodId" class="control-label"></label>
                <select asp-for="MoodId" asp-items="Model.Moods" class="form-control"></select>
                <span asp-validation-for="Mood" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" size="16" class="form-control" type="text" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="DiaryDate" class="control-label"></label>
                <input asp-for="DiaryDate" class="form-control" type="date" />
                <span asp-validation-for="DiaryDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
</div>