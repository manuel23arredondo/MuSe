@model MuSe.Web.Models.OwnWomanPlaceViewModel
@{
    ViewData["Title"] = "Editar lugar";
}

<h1>Editar</h1>

<h4>Lugar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="KindOfPlaceId" class="control-label"></label>
                <select asp-for="KindOfPlaceId" asp-items="Model.KindOfPlaces" class="form-control"></select>
                <span asp-validation-for="KindOfPlace" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Latitud" class="control-label"></label>
                <input asp-for="Latitud" size="30" class="form-control" type="number" />
                <span asp-validation-for="Latitud" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" size="30" class="form-control" type="number" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
</div>