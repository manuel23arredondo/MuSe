@model IEnumerable<MuSe.Web.Data.Entities.OwnWomanPlace>

@{
    ViewData["Title"] = "Lugares de la mujer";
}

<h1>Lugares de la mujer</h1>
<p>
    <a asp-action="Create"><img src="~/images/agregar.png" height="40" width="50" /></a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KindOfPlace.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KindOfPlace.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/editar.png" height="40" width="50" /></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/eliminar.png" height="40" width="50" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>