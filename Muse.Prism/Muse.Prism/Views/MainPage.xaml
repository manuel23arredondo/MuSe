             BackgroundColor="#E659E3">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="35">
                <Label Text="MuSe" FontFamily="{StaticResource Segoe}" HorizontalTextAlignment="Center" TextColor="White" FontSize="100"></Label>
